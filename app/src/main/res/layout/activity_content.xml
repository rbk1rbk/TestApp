<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.rbk.testapp.MainScreen"
                tools:showIn="@layout/activity_main_screen">

    <Button
        android:id="@+id/btnSaveSMB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:onClick="btnSaveOnClickListener"
        android:text="Go"/>

    <Button
        android:id="@+id/btnStopSync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:onClick="btnStopSyncListener"
        android:text="STOP"/>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:minHeight="50dp"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        android:rowOrderPreserved="true"
        android:stretchColumns="0"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow>

            <TextView
                android:layout_column="0"
                android:id="@+id/twPicSyncStateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:text="PicSync state:"/>

            <TextView
                android:layout_column="1"
                android:id="@+id/twPicSyncState"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Unknown   "/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="0"
                android:text="Total images:"/>

            <TextView
                android:layout_column="1"
                android:id="@+id/twTotalImages"
                android:text="Unknown"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="0"
                android:text="Scanned images:"/>

            <TextView
                android:layout_column="1"
                android:id="@+id/twScannedImages"
                android:text="Unknown"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="0"
                android:text="Unsynced images:"/>

            <TextView
                android:layout_column="1"
                android:id="@+id/twUnsyncedImages"
                android:text="Unknown"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="0"
                android:text="Last successfull sync:"/>

            <TextView
                android:layout_column="1"
                android:id="@+id/twLastSyncedImage"
                android:text="Unknown"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="0"
                android:text="NAS connectivity:"/>

            <TextView
                android:layout_column="1"
                android:id="@+id/twNASConnectivity"
                android:text="Not reacheable"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_span="2"
                android:text="Copying from:"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_span="2"
                android:id="@+id/twCopyFrom"
                android:ellipsize="none"
                android:lines="2"
                android:maxHeight="300dp"
                android:scrollHorizontally="false"
                android:singleLine="false"
                android:text="/path/to/the/source/file.jpg"
                android:textColor="@color/colorPrimaryDark"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_span="2"
                android:text="To:"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_span="2"
                android:id="@+id/twCopyTo"
                android:lines="2"
                android:maxHeight="300dp"
                android:singleLine="false"
                android:text="/q/w/e.jpg"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>